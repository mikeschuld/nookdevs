<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/items_list_header"
              android:layout_width="fill_parent" android:layout_height="30px"
              android:orientation="horizontal">
    <TextView android:id="@+id/items_list_header_text"
              android:layout_width="475px" android:layout_height="fill_parent"
              android:layout_marginLeft="30px"
              android:textStyle="italic" android:textSize="18sp" android:textColor="#000000"/>
    <TextView android:id="@+id/items_list_header_page"
              android:layout_width="100px" android:layout_height="fill_parent"
              android:textSize="18sp" android:textStyle="bold" android:textColor="#000000"
              android:layout_centerInParent="true"/>
</LinearLayout>
