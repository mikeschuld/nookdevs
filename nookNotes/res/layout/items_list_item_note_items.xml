<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/items_list_item"
              android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:maxHeight="630px"
              android:paddingTop="3px" android:paddingBottom="3px"
              android:orientation="vertical"
              android:background="#ffffff">
    <LinearLayout android:background="#ffffff"
                  android:layout_width="600px" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <ImageView android:id="@+id/items_list_arrow"
                   android:layout_width="15px" android:layout_height="15px"
                   android:layout_marginLeft="7px" android:layout_marginRight="8px"
                   android:layout_marginTop="7px" android:layout_marginBottom="8px"
                   android:src="@drawable/list_arrow"
                   android:scaleType="fitXY"
                   android:background="#ffffff"
                   android:visibility="invisible"/>
        <ImageView android:id="@+id/items_list_checked"
                   android:layout_width="18px" android:layout_height="18px"
                   android:layout_marginRight="8px" android:layout_marginTop="5px"
                   android:src="@drawable/list_item_checked"
                   android:scaleType="fitXY"
                   android:background="#ffffff"
                   android:visibility="gone"/>
        <ImageView android:id="@+id/items_list_unchecked"
                   android:layout_width="18px" android:layout_height="18px"
                   android:layout_marginRight="8px" android:layout_marginTop="5px"
                   android:src="@drawable/list_item_unchecked"
                   android:scaleType="fitXY"
                   android:background="#ffffff"
                   android:visibility="gone"/>
        <TextView android:id="@+id/items_list_title"
                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:paddingRight="5px"
                  android:textSize="20sp" android:textColor="#000000"
                  android:singleLine="false"/>
    </LinearLayout>
</LinearLayout>
