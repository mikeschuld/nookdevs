<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
      <!-- The e-ink display: -->
      
      <LinearLayout android:id="@+id/einkscreen"
                  android:layout_width="600px" android:layout_height="760px"
                  android:scrollbars="none"
                  android:orientation="vertical" android:gravity="center"
      >
      
      <LinearLayout android:layout_width="580px" android:layout_height="180px" android:gravity="center" android:background="#FFFFFF" >
      <LinearLayout android:layout_width="482px" android:layout_height="62px" android:gravity="center" android:background="#000000" >
      <TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#FFFFFF">
      <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
      <TextView android:layout_width="60px" android:layout_height="60px" android:background="@drawable/cell_40"
      			android:typeface="monospace" android:textColor="#000000" android:textSize="48px" android:gravity="center" android:text="S" />
      <TextView android:layout_width="60px" android:layout_height="60px" android:background="@drawable/cell_40"
      			android:typeface="monospace" android:textColor="#000000" android:textSize="48px" android:gravity="center" android:text="E" />
      <TextView android:layout_width="60px" android:layout_height="60px" android:background="@drawable/cell_40"
      			android:typeface="monospace" android:textColor="#000000" android:textSize="48px" android:gravity="center" android:text="T" />
      <TextView android:layout_width="60px" android:layout_height="60px" android:background="@drawable/cell_40"
      			android:typeface="monospace" android:textColor="#000000" android:textSize="48px" android:gravity="center" android:text="T" />
      <TextView android:layout_width="60px" android:layout_height="60px" android:background="@drawable/cell_40"
      			android:typeface="monospace" android:textColor="#000000" android:textSize="48px" android:gravity="center" android:text="I" />
      <TextView android:layout_width="60px" android:layout_height="60px" android:background="@drawable/cell_40"
      			android:typeface="monospace" android:textColor="#000000" android:textSize="48px" android:gravity="center" android:text="N" />
      <TextView android:layout_width="60px" android:layout_height="60px" android:background="@drawable/cell_40"
      			android:typeface="monospace" android:textColor="#000000" android:textSize="48px" android:gravity="center" android:text="G" />
      <TextView android:layout_width="60px" android:layout_height="60px" android:background="@drawable/cell_40"
      			android:typeface="monospace" android:textColor="#000000" android:textSize="48px" android:gravity="center" android:text="S" />			
      </TableRow>
      </TableLayout>
      </LinearLayout>      
      </LinearLayout>      
      
      </LinearLayout>

      <!--  The touchscreen: -->
      
      <LinearLayout android:id="@+id/touchscreen"
                  android:layout_width="480px" android:layout_height="144px"
                  android:background="#C0C0C0" android:scrollbars="none"
                  android:orientation="horizontal">
      	<!--  The back button: -->
      	<Button android:id="@+id/back" android:layout_width="35.0px"
                android:layout_height="fill_parent"
                android:background="@drawable/back_button" />

       	<ListView android:id="@+id/settings_submenu" 
                                android:layout_width="fill_parent" android:layout_height="fill_parent"
                                android:dividerHeight="0px" android:background="#F0F0F0"
                                android:scrollbars="none"
        />


    </LinearLayout>
  
</LinearLayout>
