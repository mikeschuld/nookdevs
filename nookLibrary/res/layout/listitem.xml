<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingTop="6.0px"
	android:paddingLeft="10.0px"
	android:paddingBottom="8.0px"
	android:layout_width="fill_parent" 
	android:layout_height="35.0px" 
	android:background="@drawable/list_selector_background">
<TextView 
    android:id="@+id/ListTextView" 
	android:layout_width="110.0px" 
	android:layout_height="fill_parent"
	android:textStyle="bold"
        android:textColor="@color/list_selector_textcolor"/>
	<TextView 
    android:id="@+id/ListSubTextView" 
	android:layout_width="150.0px" 
	android:layout_height="fill_parent"
        android:textColor="@color/list_selector_textcolor"/>
<ImageView
	android:id="@+id/ListImageView"
	android:layout_width="62.0px"
        android:layout_height="fill_parent"/>
	</LinearLayout>
